<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NDBotUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NDBotUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Login" Width="400" Height="300" Background="#0B1737">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">

        <!-- Title of the login screen -->
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />

        <!-- Username input field -->
        <TextBox Name="Username" Width="250" Height="40" Margin="0,10"
                 Background="#FFFFFF" BorderBrush="#D1D1D6" BorderThickness="1" Padding="10"
                 Watermark="Enter username" />

        <!-- Password input field using TextBox -->
        <TextBox Name="Password" Width="250" Height="40" Margin="0,10"
                 Background="#FFFFFF" BorderBrush="#D1D1D6" BorderThickness="1" Padding="10"
                 Watermark="Enter password" PasswordChar="*" />

        <!-- Login button -->
        <Button Content="Login" Width="250" Height="40" Background="#6200EE" Foreground="White" FontWeight="Bold"
                BorderBrush="#6200EE" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <!-- Link for forgot password -->
        <TextBlock Text="Forgot password?" HorizontalAlignment="Center" Foreground="#6200EE" Cursor="Hand" />
    </StackPanel>
</Window>