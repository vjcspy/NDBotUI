<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NDBotUI.UI.Game.MementoMori.Controls.TwoColumnSpliter">
    <Grid ColumnDefinitions="*,5,*" RowDefinitions="*">
        <Border Grid.Column="0" Background="LightBlue" MinWidth="150">
            <TextBlock Text="Left Panel" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" Background="Gray" HorizontalAlignment="Stretch" />

        <Border Grid.Column="2" Background="LightGreen" MinWidth="150">
            <TextBlock Text="Right Panel" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
